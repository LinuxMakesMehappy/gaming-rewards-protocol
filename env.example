# =============================================================================
# GAMING REWARDS PROTOCOL - ZERO-CVE JUPITER CORE
# =============================================================================
# Copy this file to .env and fill in your own values
# NEVER commit your actual .env file to version control!

# =============================================================================
# SOLANA CONFIGURATION
# =============================================================================

# Solana RPC endpoint (use devnet for testing, mainnet for production)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Bot wallet private key (base58 encoded)
# Generate with: solana-keygen new --outfile bot-keypair.json
# Then extract private key from the JSON file
BOT_PRIVATE_KEY=your_bot_private_key_here

# =============================================================================
# JUPITER INTEGRATION
# =============================================================================

# Jupiter API endpoint
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Jupiter API key (optional but recommended)
JUPITER_API_KEY=your_jupiter_api_key_here

# Jupiter liquidity pool configuration
JUPITER_SOL_USDC_POOL=your_jupiter_pool_address_here

# =============================================================================
# STEAM VALIDATION
# =============================================================================

# Steam API Key (get from https://steamcommunity.com/dev/apikey)
STEAM_API_KEY=your_steam_api_key_here

# Steam OpenID realm
STEAM_OPENID_REALM=https://your-domain.com

# Steam session validation timeout (seconds)
STEAM_SESSION_TIMEOUT=300

# =============================================================================
# ORACLE SYSTEM
# =============================================================================

# Oracle private key for signing game events (base58 encoded)
# This should be a dedicated keypair for the oracle
ORACLE_PRIVATE_KEY=your_oracle_private_key_here

# Oracle stake amount (in lamports)
ORACLE_STAKE_AMOUNT=1000000000

# =============================================================================
# TREASURY CONFIGURATION
# =============================================================================

# Treasury account public key
TREASURY_PUBLIC_KEY=your_treasury_public_key_here

# Jupiter treasury pool address
JUPITER_TREASURY_POOL=your_jupiter_treasury_pool_here

# =============================================================================
# REWARD CONFIGURATION
# =============================================================================

# Default reward amount for achievements (in lamports)
DEFAULT_REWARD_AMOUNT=1000000

# Maximum reward amount (in lamports)
MAX_REWARD_AMOUNT=10000000

# Jupiter fee share percentage
JUPITER_FEE_SHARE=50

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate limiting - requests per minute
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Rate limiting - burst size
RATE_LIMIT_BURST_SIZE=10

# Session timeout in seconds
SESSION_TIMEOUT=3600

# Maximum verification age (seconds)
MAX_VERIFICATION_AGE=300

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry DSN for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Security monitoring endpoint
SECURITY_MONITORING_URL=your_security_monitoring_url_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (for user data persistence)
DATABASE_URL=postgresql://username:password@localhost:5432/gaming_rewards

# Redis URL (for session management)
REDIS_URL=redis://localhost:6379

# =============================================================================
# FRAUD DETECTION
# =============================================================================

# Fraud detection API endpoint
FRAUD_DETECTION_URL=your_fraud_detection_url_here

# Fraud detection API key
FRAUD_DETECTION_KEY=your_fraud_detection_key_here

# =============================================================================
# SECURITY WARNINGS
# =============================================================================
# CRITICAL SECURITY NOTES:
# 
# 1. NEVER commit your .env file to version control
# 2. Use strong, unique private keys for each environment
# 3. Regularly rotate your API keys and private keys
# 4. Use environment-specific keys (devnet vs mainnet)
# 5. Store production keys securely (e.g., in a password manager)
# 6. Consider using a secrets management service for production
# 7. Monitor your protocol's activity for suspicious behavior
# 8. Keep your dependencies updated for security patches
# 9. Implement zero-CVE policy across all dependencies
# 10. Conduct regular security audits and penetration testing
#
# =============================================================================
