# Gaming Rewards Protocol - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Solana Network Configuration
SOLANA_CLUSTER=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com

# Jupiter API Configuration
JUPITER_API_URL=https://quote-api.jup.ag/v6
JUPITER_API_KEY=your_jupiter_api_key_here

# =============================================================================
# STEAM API CONFIGURATION
# =============================================================================

# Steam Web API Key (Get from https://steamcommunity.com/dev/apikey)
STEAM_API_KEY=your_steam_api_key_here

# Steam Developer API Key (for enhanced features)
STEAM_DEVELOPER_API_KEY=your_steam_developer_api_key_here

# Steam OpenID Configuration
STEAM_OPENID_REALM=https://your-domain.com
STEAM_SESSION_TIMEOUT=3600

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Session Management
SESSION_TIMEOUT=3600
MAX_VERIFICATION_AGE=300

# Fraud Detection
MAX_FRAUD_SCORE=80
FRAUD_DETECTION_ENABLED=true

# =============================================================================
# ORACLE CONFIGURATION
# =============================================================================

# Oracle Endpoints (comma-separated)
ORACLE_ENDPOINTS=https://oracle1.example.com,https://oracle2.example.com
ORACLE_VERIFICATION_TIMEOUT=5000
ORACLE_CONSENSUS_THRESHOLD=2

# =============================================================================
# VALIDATION CONFIGURATION
# =============================================================================

# Validation Manager
MAX_CONCURRENT_VALIDATIONS=10
VALIDATION_TIMEOUT=30000
VALIDATION_RETRY_ATTEMPTS=3

# =============================================================================
# PROTOCOL ECONOMICS
# =============================================================================

# Reward Configuration
MAX_REWARD_PER_ACHIEVEMENT=1000000
MIN_STAKE_AMOUNT=100000
MAX_STAKE_AMOUNT=10000000
STAKING_LOCK_PERIOD=86400
PROTOCOL_FEE_BPS=250

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (if using database)
DATABASE_URL=postgresql://username:password@localhost:5432/gaming_rewards
DATABASE_SSL=true

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Log Output (console, file, both)
LOG_OUTPUT=console

# Log File Path (if using file output)
LOG_FILE_PATH=./logs/gaming-rewards.log

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health Check Endpoint
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=3001

# Metrics Collection
METRICS_ENABLED=true
METRICS_PORT=3002

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
NODE_ENV=development
DEBUG=true

# Hot Reload
HOT_RELOAD_ENABLED=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production Settings (override in production)
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=warn
# SOLANA_CLUSTER=mainnet-beta
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# =============================================================================
# SECURITY WARNINGS
# =============================================================================

# IMPORTANT: Never commit your actual .env file to version control
# This file contains sensitive information like API keys and passwords
# Always use .env.example as a template and keep .env in .gitignore

# For production deployment:
# 1. Use environment variables instead of .env files
# 2. Rotate API keys regularly
# 3. Use secure key management services
# 4. Enable all security features
# 5. Monitor for suspicious activity
